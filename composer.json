{
    "name": "rrddevops/dast-scm-sast-app",
    "description": "Aplicação web PHP com esteira de validação de código DAST/SAST",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Rodrigo Davila",
            "email": "rodrigo@example.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "slim/slim": "^4.12",
        "slim/psr7": "^1.6",
        "php-di/php-di": "^7.0",
        "vlucas/phpdotenv": "^5.5",
        "monolog/monolog": "^3.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.4",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7",
        "friendsofphp/php-cs-fixer": "^3.20",
        "phpcompatibility/php-compatibility": "^9.3",
        "enlightn/security-checker": "^1.10"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "app/tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "lint": "phpcs app/src/",
        "lint-fix": "phpcbf app/src/",
        "format": "php-cs-fixer fix app/src/",
        "format-check": "php-cs-fixer fix --dry-run --diff app/src/",
        "security-check": "security-checker security:check composer.lock",
        "stan": "phpstan analyse app/src/ --level=8",
        "fix-all": "php-cs-fixer fix app/src/ app/tests/ && phpcbf app/src/"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
} 