<?xml version="1.0"?>
<ruleset name="PSR12">
    <description>PSR-12 coding standard</description>
    
    <rule ref="PSR12"/>
    
    <file>app/src</file>
    <file>app/tests</file>
    
    <exclude-pattern>vendor/*</exclude-pattern>
    <exclude-pattern>app/logs/*</exclude-pattern>
    
    <arg name="colors"/>
    <arg name="parallel" value="75"/>
</ruleset> 